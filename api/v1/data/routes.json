{
  "groups": [
    {
      "url": "/v1/",
      "routes" : [
        {
          "method": "GET",
          "route": "/get-last-posts/{size}/{indent}",
          "handler": "GetLastPosts"
        },
        {
          "method": "GET",
          "route": "/post/get-last-posts-by-category/{category_id}/{size}/{indent}",
          "handler": "GetLastPostsByCategory"
        },
        {
          "method": "GET",
          "route": "/post/get-post/{id}",
          "handler": "GetSinglePost"
        },
        {
          "method": "GET",
          "route": "/category/all",
          "handler": "GetAllCategories"
        },
        {
          "method": "GET",
          "route": "/tag/all",
          "handler": "GetAllTags"
        },
        {
          "method": "GET",
          "route": "/post/delete/{id}",
          "handler": "DeletePost"
        },
        {
          "method": "POST",
          "route": "/post/edit-post",
          "handler": "UpdatePost"
        },
        {
          "method": "POST",
          "route": "/post/create-post",
          "handler": "CreatePost"
        },
        {
          "method": "POST",
          "route": "/post/create-comment",
          "handler": "CreateComment"
        }
      ]
    }
  ],
  "routes": []
}