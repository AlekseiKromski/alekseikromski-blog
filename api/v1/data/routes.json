{
  "groups": [
    {
      "url": "/v1",
      "routes": [
        {
          "method": "POST",
          "route": "/search",
          "handler": "Search"
        },
        {
          "method": "GET",
          "route": "/login/",
          "handler": "Login"
        }
      ]
    },
    {
      "url": "/v1/category",
      "routes" : [
        {
          "method": "GET",
          "route": "/all",
          "handler": "GetAllCategories"
        },
        {
          "method": "GET",
          "route": "/delete/{id}",
          "handler": "DeleteCategory"
        },
        {
          "method": "POST",
          "route": "/edit",
          "handler": "UpdateCategory",
          "guard": "JWTGuard"
        },
        {
          "method": "POST",
          "route": "/create",
          "handler": "CreateCategory",
          "guard": "JWTGuard"
        }
      ]
    },
    {
      "url": "/v1/tag",
      "routes" : [
        {
          "method": "GET",
          "route": "/all",
          "handler": "GetAllTags"
        },
        {
          "method": "GET",
          "route": "/delete/{id}",
          "handler": "DeleteTag"
        },
        {
          "method": "POST",
          "route": "/edit",
          "handler": "UpdateTag",
          "guard": "JWTGuard"
        },
        {
          "method": "POST",
          "route": "/create",
          "handler": "CreateTag",
          "guard": "JWTGuard"
        }
      ]
    },
    {
      "url": "/v1/post",
      "routes" : [
        {
          "method": "GET",
          "route": "/get-last-posts/{size}/{indent}",
          "handler": "GetLastPosts"
        },
        {
          "method": "GET",
          "route": "/get-last-posts-by-category/{category_id}/{size}/{indent}",
          "handler": "GetLastPostsByCategory"
        },
        {
          "method": "GET",
          "route": "/get-post/{id}",
          "handler": "GetSinglePost"
        },
        {
          "method": "GET",
          "route": "/delete/{id}",
          "handler": "DeletePost"
        },
        {
          "method": "POST",
          "route": "/edit",
          "handler": "UpdatePost",
          "guard": "JWTGuard"
        },
        {
          "method": "POST",
          "route": "/create",
          "handler": "CreatePost",
          "guard": "JWTGuard"
        },
        {
          "method": "POST",
          "route": "/create-comment",
          "handler": "CreateComment"
        }
      ]
    }
  ],
  "routes": []
}