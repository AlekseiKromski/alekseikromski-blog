{
  "groups": [
    {
      "url": "/v1/category",
      "routes" : [
        {
          "method": "GET",
          "route": "/all",
          "handler": "GetAllCategories"
        },
        {
          "method": "GET",
          "route": "/delete/{id}",
          "handler": "DeleteCategory"
        }
      ]
    },
    {
      "url": "/v1/tag",
      "routes" : [
        {
          "method": "GET",
          "route": "/all",
          "handler": "GetAllTags"
        },
        {
          "method": "GET",
          "route": "/delete/{id}",
          "handler": "DeleteTag"
        }
      ]
    },
    {
      "url": "/v1/post",
      "routes" : [
        {
          "method": "GET",
          "route": "/get-last-posts/{size}/{indent}",
          "handler": "GetLastPosts"
        },
        {
          "method": "GET",
          "route": "/get-last-posts-by-category/{category_id}/{size}/{indent}",
          "handler": "GetLastPostsByCategory"
        },
        {
          "method": "GET",
          "route": "/get-post/{id}",
          "handler": "GetSinglePost"
        },
        {
          "method": "GET",
          "route": "/delete/{id}",
          "handler": "DeletePost"
        },
        {
          "method": "POST",
          "route": "/edit-post",
          "handler": "UpdatePost"
        },
        {
          "method": "POST",
          "route": "/create-post",
          "handler": "CreatePost"
        },
        {
          "method": "POST",
          "route": "/create-comment",
          "handler": "CreateComment"
        }
      ]
    }
  ],
  "routes": []
}